{
  "description": "Using npm's package.json file purely for simple organization of many shell commands, each can be easily ran as `npm run <command>` if node.js/npm is installed.",
  "scripts": {
    "a": "(bash -c pi_base/scripts/pkg-check.sh)",

    "pkg:clean": "rm -rf dist pi_base.egg-info",
    "pkg:build": "python3 -m build",
    "pkg:extract": "(cd dist && tar -zxvf *.tar.gz)",
    "pkg:diff-build-data": "bash -c pi_base/scripts/pkg-check.sh",
    "pkg:check-build-data": "npm run pkg:clean && npm run pkg:build && npm run pkg:extract && npm run pkg:diff-build-data",
    "all": "npm run pkg:check-build-data && echo SUCCESS!",

    "dev:init": "python3 -m venv venv && source venv/Scripts/activate && pip install --upgrade pip && pip install -e . && pip install -e .[dev]",
    "dev:editable": "pip install -e . && pip install -e .[dev]",
    "dev:strict": "pip install -e . --config-settings editable_mode=strict && pip install -e .[dev]",
    "dev:uninstall": "pip uninstall pi_base",
    "dev:env": "source venv/Scripts/activate",
    "tox:lint": "tox run -e lint",
    "tox:types": "tox run -e types",
    "tox:test": "tox run -e test",
    "tox:docs": "tox run -e docs",
    "tox:build": "tox run -e build",
    "ruff:format": "ruff format .",
    "docs:test": "sphinx-build -b doctest ",
    "docs:auto-api": "sphinx-apidoc",

    "lint": "npm run tox:lint",
    "format": "npm run ruff:format",
    "test": "npm run tox:test",
    "docs": "npm run tox:docs",
    "build": "npm run tox:build"

  }
}